{
  "name": "lightshow-games-server",
  "version": "1.0.0",
  "description": "node server that runs the light show game server",
  "main": "dist/index.js",
  "scripts": {
    "postinstall": "cd admin && yarn install",
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix && yarn clean",
    "build": "tsc && cd admin && yarn build",
    "prestart": "yarn build",
    "start": "node -r esm .",
    "clean": "rm -rf dist",
    "test": "mocha -r ts-node/register tests/**/*.test.ts",
    "coverage": "nyc -r lcov -e .ts -x \"*.test.ts\" npm run test"
  },
  "author": "Alex Kafer",
  "license": "ISC",
  "dependencies": {
    "@types/helmet": "^0.0.45",
    "@types/request-promise-native": "^1.0.17",
    "bootstrap": "^4.4.1",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "esm": "^3.2.25",
    "express": "^4.17.1",
    "lowdb": "^1.0.0",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.8",
    "socket.io": "^2.4.0",
    "three": "^0.110.0",
    "uuid": "^3.3.3",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.6",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.2",
    "@types/lowdb": "^1.0.9",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.12.5",
    "@types/socket.io": "^2.1.4",
    "@types/uuid": "^3.4.6",
    "chai": "^4.2.0",
    "mocha": "^6.2.2",
    "nyc": "^14.1.1",
    "ts-node": "^8.5.4",
    "tslint": "^6.0.0-beta0",
    "typescript": "^3.6.4"
  }
}
